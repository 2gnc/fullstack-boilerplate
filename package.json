{
    "name": "boilerplate",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "node_modules/.bin/concurrently \"npm run server:watch\" \"npm run server:start\" ",
        "server:watch": "node_modules/.bin/tsc --project tsconfig.server.json -w",
        "server:start": "node_modules/.bin/nodemon server/build/index.js",
        "lint:server": "node_modules/.bin/eslint -c .eslintrc.server.yml --ext .ts server --ignore-path .eslintignore.server.yml --fix",
        "prettier": "node_modules/.bin/prettier --write --ignore-unknown",
        "prepare": "node_modules/.bin/husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/2gnc/fullstack-boilerplate.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/2gnc/fullstack-boilerplate/issues"
    },
    "homepage": "https://github.com/2gnc/fullstack-boilerplate#readme",
    "dependencies": {},
    "devDependencies": {
        "@types/node": "17.0.8",
        "@typescript-eslint/eslint-plugin": "5.9.1",
        "@typescript-eslint/parser": "5.9.1",
        "concurrently": "7.0.0",
        "eslint": "8.6.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-plugin-import": "2.25.4",
        "nodemon": "2.0.15",
        "onchange": "7.1.0",
        "prettier": "2.5.1",
        "ts-node": "10.4.0",
        "typescript": "4.5.4"
    },
    "lint-staged": {
        "*": [
            "npm run prettier",
            "npm run lint:server"
        ]
    }
}
